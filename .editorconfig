# http://editorconfig.org

root = true

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[*]

charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[*.md]

# Markdown uses the trailing whitespaces.
# https://daringfireball.net/projects/markdown/syntax#block

trim_trailing_whitespace = true

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[Makefile]
indent_style = tab
